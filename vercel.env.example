# Exemplo de configuração de variáveis de ambiente para Vercel
# Essas variáveis devem ser configuradas no dashboard da Vercel

# Configurações do servidor
NODE_ENV=production

# JWT Configuration
JWT_SECRET=sua_chave_secreta_aqui_super_segura_para_producao
JWT_EXPIRE=7d

# Database Configuration - MySQL externo
DB_HOST=mercocamp.ip.odhserver.com
DB_PORT=33101
DB_USER=projetos
DB_PASSWORD=masterkey
DB_NAME_USERS=dbusers
DB_NAME_CHECKIN=dbcheckin
DB_NAME_MERCOCAMP=dbmercocamp

# CORS - URLs permitidas
ALLOWED_ORIGINS=https://recebhomolog.mercocamptech.com.br,http://recebhomolog.mercocamptech.com.br

# Email Configuration (opcional)
EMAIL_HOST=smtp.host.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=user@example.com
EMAIL_PASS=password

# Rate Limiting (opcional)
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=500

# Log Level
LOG_LEVEL=info

# IMPORTANTE: Configure estas variáveis no dashboard da Vercel:
# 1. Acesse: https://vercel.com/dashboard
# 2. Selecione seu projeto
# 3. Vá em Settings > Environment Variables
# 4. Adicione cada variável acima manualmente
